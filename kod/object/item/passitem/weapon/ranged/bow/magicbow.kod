MagicBow is Bow

constants:

   include blakston.khd

resources:

   MagicBow_name_rsc = "magic bow"
   MagicBow_desc_rsc = \
      "This magic bow has been delicately carved from one of the boughs of a yew tree and "
      "enhanced with powerful enchantments. It grants an expert archer excellent range and accuracy "
		"but may lack the power to strike through heavy shields.  "
		"Wielding this weapon will severely hinder your spell casting."

classvars:

   vrName = MagicBow_name_rsc
   vrDesc = MagicBow_desc_rsc

   viRange = 100
   viWeaponDamage = 0
   viHit_roll_modifier = 0
	viRangedAccuracy = 60
   viStrikethrough = 0
   viProf_bonus = 50
   viSpell_modifier = -40

	viValue_average = 3500
	
   % What's the basic color of the wood?
   viBaseXLAT = XLAT_TO_GRAY

properties:

messages:

end
