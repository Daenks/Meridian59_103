Block is Skill

constants:

   include blakston.khd

resources:
   Block_name_rsc = "block"
   Block_icon_rsc = iblock.bgf
   Block_desc_rsc = "Block is a basic skill, allowing a warrior to block blows with a shield.  "
         "A successfully blocked blow may not only damage weapon and defending shield, but also "
			"the attacker. This, experienced warriors will know how to use blocking both as a defensive "
			"technique and a powerful attack. A strong arm is required for effective blocking!"

   Block_skill_intro = "Weaponcraft Lv. 1: The ability to block blows in combat, and thus stay alive longer."

classvars:

   vrName = Block_name_rsc
   vrIcon = Block_icon_rsc
   vrDesc = Block_desc_rsc

   vrSkill_intro = Block_skill_intro

   viIndefinite = ARTICLE_NONE
   viDefinite = ARTICLE_NONE

   viSkill_num = SKID_BLOCK
   viSchool = SKS_FENCING
   viSkill_Level = 1
   viChance_to_Increase = 10

   viSkillExertion = 0
   vbCheck_exertion = FALSE

   vbAutomatic = TRUE

properties:

messages:

   GetRequisiteStat(who=$)
   "Varies from skill to skill and spell to spell."
   {
      return Send(who,@GetMight);
   }

end
