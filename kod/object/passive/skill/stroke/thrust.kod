Thrust is Stroke

constants:

   include blakston.khd

resources:
   thrust_name_rsc = "slash"
   thrust_icon_rsc = slashico.bgf
   thrust_desc_rsc = "Slash is the most common weapon skill.  It helps you hit with melee weapons."

   thrust_skill_intro = "Weaponcraft Lv. 1: The most basic skill of armed combat. A must for those who live by the blade."

classvars:

   vrName = thrust_name_rsc
   vrIcon = thrust_icon_rsc
   vrDesc = thrust_desc_rsc

   vrSkill_intro = thrust_skill_intro

   viIndefinite = ARTICLE_NONE
   viDefinite = ARTICLE_NONE

   viSchool = SKS_FENCING
   viSkill_Num = SKID_THRUST
   viSkill_level = 1
   viChance_to_increase = 20

   viskillExertion = 2
   vbCheck_exertion = FALSE

   viDamage_factor = 100

properties:

   plPrerequisites = $

   piChanceToIncrease = 100

messages:

   GetAttackType(weapon_used=$)
   {
      local i;
      
      i= send(weapon_used,@GetAttackType);
      
      if (i & ATCK_WEAP_THRUST) AND NOT (i & ATCK_WEAP_SLASH)
      {
         i = i & (~ATCK_WEAP_THRUST);
         i = (i | ATCK_WEAP_SLASH);
      }
      
      return i;
   }

end
